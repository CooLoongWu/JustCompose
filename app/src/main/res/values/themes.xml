<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JustCompose" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/net_easy</item>
        <item name="colorPrimaryVariant">@color/net_easy</item>
        <item name="colorOnPrimary">@color/net_easy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/net_easy</item>
        <item name="colorSecondaryVariant">@color/net_easy</item>
        <item name="colorOnSecondary">@color/net_easy</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JustCompose.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@android:color/transparent</item>
        <item name="statusBarForeground">@android:color/transparent</item>
    </style>

    <style name="Theme.JustCompose.Full" parent="Theme.JustCompose">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/net_easy</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="Theme.JustCompose.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JustCompose.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>